- @posts.each do |post|
  .card.mb-3
    .card-body
      h2.h5.card-title
        = link_to post.title, post_path(post), class: 'link-dark text-decoration-none'
      .card-text.mb-2
        = post.body.truncate(200)
      .text-right.small.text-muted.mt-auto
        span.me-2
          | Liked: #{post.likes.count}
        span.me-2
          = time_ago_in_words post.created_at
        span
          = post.creator.email
